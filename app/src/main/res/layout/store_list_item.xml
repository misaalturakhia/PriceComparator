<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingLeft="@dimen/list_item_padding_left"
    android:background="@color/light_gray"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/store_logo_width"
        android:layout_height="@dimen/store_logo_height"
        android:layout_gravity="center"
        android:background="@drawable/rectangle_shadow_bg_thin"
        android:padding="@dimen/image_padding_for_background"
        android:id="@+id/product_store_logo_iv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="left|center"
        android:paddingLeft="@dimen/store_price_padding_left"
        android:singleLine="true"
        android:id="@+id/product_store_price" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/store_logo_height"
        android:text="@string/buy_button_text"
        android:id="@+id/product_store_buy_btn"
        android:background="@drawable/blue_rounded_rectangle"
        android:layout_marginRight="@dimen/store_button_margin_right"
        />


</LinearLayout>