<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_list_item_height"
    android:minHeight="@dimen/product_list_item_height"
    android:padding="@dimen/product_list_item_padding"
    android:background="@color/light_gray">

    <ImageView
        android:layout_width="@dimen/product_item_image_width"
        android:layout_height="@dimen/product_item_image_height"
        android:id="@+id/product_image_iv"
        android:background="@drawable/rectangle_shadow_bg_thin"
        android:padding="@dimen/image_padding_for_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="PRODUCT"
            android:id="@+id/product_name_tv"
            android:singleLine="true"
            android:paddingLeft="@dimen/list_item_padding_left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:id="@+id/product_price_tv"
            android:textColor="@color/red"
            android:text="PRICE"
            android:paddingLeft="@dimen/list_item_padding_left"/>


        </LinearLayout>


</LinearLayout>